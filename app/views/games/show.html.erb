<p>
  <strong>Date:</strong>
  <%= @game.date %>
</p>

<p>
  <strong>Board Number:</strong>
  <%= @game.number %>
</p>

<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Email</th>
      <th>Score</th>
    </tr>
  </thead>
  <tbody>
    <% @game.players.each do |player| %>
      <tr>
        <td><%= player.ranking %></td>
        <td><%= link_to player.email, "mailto:#{player.email}" %></td>
        <td><%= player.score %></td>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
