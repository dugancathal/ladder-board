<%= simple_nested_form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.input :date %>
  </div>
  <div class="field">
    <%= f.input :number %><br>
  </div>

  <h4>Players</h4>
  <%= f.fields_for :players do |player_form| %>
    <%= player_form.input :user_id, collection: User.all, label_method: :email, value_method: :id %>
    <%= player_form.input :score %>
    <%= player_form.link_to_remove "Remove this player" %>
  <% end %>
  <p><%= f.link_to_add "Add a player", :players %></p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
